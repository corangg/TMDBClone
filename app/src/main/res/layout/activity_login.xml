<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.tmdb.presentation.viewmodel.LoginViewmodel" />
    </data>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.LoginActivity"
        android:background="@color/black"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/log_in_padding_horizontal">

        <ImageView
            android:layout_width="@dimen/img_logo_width"
            android:layout_height="@dimen/img_logo_height"
            android:background="@drawable/bg_orangestroke_black"
            android:src="@drawable/img_main_logo"
            android:layout_marginTop="@dimen/log_in_logo_margin_top"
            android:paddingHorizontal="@dimen/log_in_logo_padding_horizontal"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_id"
            android:hint="@string/id_hint"
            android:textColorHint="@color/gray"
            android:layout_marginTop="@dimen/log_in_logo_id_margin"
            android:inputType="text"
            android:textSize="@dimen/text_id"
            android:paddingVertical="@dimen/log_in_id_padding_vertical"
            android:paddingHorizontal="@dimen/log_in_id_padding_horizontal"
            android:text="@={viewmodel.id}"
            android:textColor="@color/black"
            android:background="@drawable/bg_orangestroke_white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_pw"
            android:hint="@string/pw_hint"
            android:textColorHint="@color/gray"
            android:layout_marginTop="@dimen/log_in_id_margin"
            android:inputType="textPassword"
            android:textSize="@dimen/text_id"
            android:paddingVertical="@dimen/log_in_id_padding_vertical"
            android:paddingHorizontal="@dimen/log_in_id_padding_horizontal"
            android:text="@={viewmodel.password}"
            android:textColor="@color/black"
            android:background="@drawable/bg_orangestroke_white"/>

        <Button
            android:id="@+id/btn_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/log_in_id_sign_in_margin"
            android:background="@drawable/bg_orangestroke_black"
            android:onClick="@{()->viewmodel.clickedSignIn()}"
            android:paddingVertical="@dimen/log_in_btn_padding_vertical"
            android:text="@string/sign_in"
            android:textColor="@color/logincolor"
            android:textSize="@dimen/text_detail_name"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/log_in_sign_in_up_margin"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account"
                android:textColor="@color/white"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:layout_marginStart="@dimen/log_in_sign_up_margin_start"
                android:text="@string/sign_up"
                android:textSize="@dimen/text_id"
                android:textColor="@color/logincolor"
                android:onClick="@{()->viewmodel.signUp()}"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_continue"
            android:background="@drawable/bg_orangestroke_black"
            android:layout_marginTop="@dimen/log_in_sign_up_guest_margin"
            android:text="@string/conti"
            android:paddingVertical="@dimen/log_in_btn_padding_vertical"
            android:textSize="@dimen/text_detail_name"
            android:textStyle="bold"
            android:textColor="@color/logincolor"
            android:onClick="@{()->viewmodel.servieceContinue()}"/>
    </LinearLayout>
</layout>