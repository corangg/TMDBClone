<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="com.example.tmdb.ui.viewmodel.MainViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".ui.fragment.SearchFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/toolbar"
            android:padding="6dp"
            android:layout_marginTop="6dp">

            <EditText
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="match_parent"
                android:background="@drawable/bg_title"
                android:hint="@string/search"
                android:text="@={viewmodel.searchKeyword}"
                android:textSize="20sp"
                android:textColorHint="@color/gray"
                android:textColor="@color/white"
                android:paddingHorizontal="10dp" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/bg_themestroke"
                android:src="@drawable/ic_search"
                android:scaleType="centerInside"
                android:layout_marginStart="10dp"
                android:padding="10dp"
                app:tint="@color/white"
                android:onClick="@{()->viewmodel.searchKeyword()}"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_back"
            android:layout_below="@+id/toolbar">

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_search"
                android:layout_centerInParent="true"
                app:tint="@color/white"
                android:id="@+id/img_search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_search"
                android:textColor="@color/white"
                android:text="@={viewmodel.textSearchAny}"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="16dp" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollview"
            android:layout_below="@+id/toolbar"
            android:padding="12dp">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recycler_search"/>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/bg_title"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:padding="1dp">

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_movies"
                android:textSize="13sp"
                android:background="@color/logincolor"
                android:text="@string/movies"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:onClick="@{()-> viewmodel.selectSearchAny(0)}"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_actors"
                android:background="@color/black"
                android:textSize="13sp"
                android:text="@string/actor"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:onClick="@{()-> viewmodel.selectSearchAny(1)}"/>

        </LinearLayout>

    </RelativeLayout>
</layout>