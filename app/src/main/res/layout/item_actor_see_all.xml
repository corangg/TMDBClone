<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/img_actor_see_all_height"
    android:layout_margin="@dimen/detail_item_margin"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_actor_see_all">
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/img_actor_see_all_width"
        android:layout_height="match_parent"
        android:id="@+id/card_profile"
        app:cardCornerRadius="@dimen/poster_radius">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_profile"
            android:src="@drawable/img_not_found"
            android:scaleType="fitXY"/>
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/card_profile"
        android:layout_marginStart="@dimen/detail_item_margin"
        android:id="@+id/layer_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/actor_see_all_margin_top"
            android:textSize="@dimen/text_detial_normal"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_job"
            android:layout_marginTop="@dimen/detail_smal_margin"
            android:layout_below="@+id/text_name"
            android:textSize="@dimen/text_profile_id"
            android:textColor="@color/gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_popularity"
            android:layout_marginBottom="@dimen/layout_margin_end"
            android:textColor="@color/logincolor"
            android:textSize="@dimen/text_graphy"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ImageButton
        android:layout_width="@dimen/btn_detail"
        android:layout_height="@dimen/btn_detail"
        android:id="@+id/btn_detail"
        android:background="@drawable/ic_right"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/detail_margin_bottom"
        android:backgroundTint="@color/white"
        android:layout_alignParentEnd="true" />
</RelativeLayout>