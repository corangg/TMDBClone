<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/detail_item_margin"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/poster_radius">
        <ImageView
            android:layout_width="@dimen/img_company_width"
            android:layout_height="@dimen/img_company_height"
            android:background="@color/white"
            android:src="@drawable/img_not_found"
            android:scaleType="centerCrop"
            android:id="@+id/img_company"/>

    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_company"
        android:textColor="@color/logincolor"
        android:textSize="@dimen/text_detail_smal"
        android:maxLines="2"
        android:ellipsize="end"/>
</LinearLayout>