<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/layout_margin_end"
    android:id="@+id/item_movie"
    android:background="@color/black"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/poster_radius">
        <ImageView
            android:layout_width="@dimen/popular_width"
            android:layout_height="@dimen/popular_height"
            android:src="@drawable/img_not_found"
            android:scaleType="centerCrop"
            android:id="@+id/img_poster"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/movies_text_height"
        android:background="@color/black"
        android:layout_marginTop="@dimen/detail_margin"
        android:textSize="@dimen/text_detial_normal"
        android:textStyle="bold"
        android:ellipsize="end"
        android:id="@+id/text_title"
        android:maxLines="1"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detail_smal_margin"
        android:textColor="@color/logincolor"
        android:textSize="@dimen/text_detail_smal"
        android:maxLines="1"
        android:id="@+id/text_popularity"/>
</LinearLayout>