<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewmodel"
            type="com.example.tmdb.presentation.viewmodel.FullImageViewmodel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:orientation="vertical"
        tools:context=".ui.activity.FullImageActivity">

        <ImageButton
            android:layout_width="@dimen/btn_back_width"
            android:layout_height="@dimen/btn_back_height"
            android:id="@+id/btn_back"
            android:scaleType="centerInside"
            android:layout_marginTop="@dimen/layout_margin_top"
            android:background="@color/black"
            android:src="@drawable/ic_back"
            app:tint="@color/logincolor"
            android:onClick="@{()->viewmodel.clickedBack()}"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img" />
    </LinearLayout>
</layout>