<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/item_top_rated_width"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/item_top_rated_margin_end"
    android:id="@+id/itme_movie"
    android:layout_marginBottom="@dimen/item_top_rated_margin_bottom"
    android:background="@color/black"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        app:cardCornerRadius="@dimen/poster_radius">
        <ImageView
            android:layout_width="@dimen/item_top_rated_img_width"
            android:layout_height="@dimen/item_top_rated_img_height"
            android:src="@drawable/img_not_found"
            android:scaleType="centerCrop"
            android:id="@+id/img_poster"/>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_toEndOf="@+id/card"
        android:layout_toStartOf="@+id/btn_detail"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:layout_marginTop="@dimen/item_top_rated_margin_top"
            android:textSize="@dimen/item_top_rated_text_title"
            android:textStyle="bold"
            android:ellipsize="end"
            android:id="@+id/text_title"
            android:maxLines="2"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_smal"
            android:textColor="@color/logincolor"
            android:textSize="@dimen/item_top_rated_text_popularity"
            android:maxLines="1"
            android:id="@+id/text_popularity"/>
    </LinearLayout>
    <ImageButton
        android:layout_width="@dimen/item_top_rated_img_detail"
        android:layout_height="@dimen/item_top_rated_img_detail"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_detail"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_right"
        android:layout_marginEnd="@dimen/margin_end_layout"
        android:backgroundTint="@color/white" />
</RelativeLayout>